{% extends '@SubspaceCustomerBundle/Resources/views/FrontEnd/default.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block mainContainer %}
<!-- Reset Password Content -->
  <div class="login-container user-form">
    <div class="container">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 form-back">

					<form class="form-horizontal form-margin">
            <div class="form-group">
              <label for="inputPassword3" class="col-sm-2 control-label">New Password</label>
              <div class="input-group">
                <input type="password" class="form-control" name="login-password" placeholder="Enter a Password" aria-describedby="basic-addon2">
                <span class="input-group-addon" id="basic-addon2"><i class="fa fa-check" aria-hidden="true"></i></span>
              </div>
            </div>
						<div class="form-underline"></div>
            <div class="form-group">
              <label for="inputPassword3" class="col-sm-2 control-label">Re-type Password</label>
              <div class="input-group">
                <input type="password" class="form-control" name="login-password" placeholder="Re-type your Password" aria-describedby="basic-addon2">
                <span class="input-group-addon" id="basic-addon2"><i class="fa fa-check" aria-hidden="true"></i></span>
              </div>
            </div>
						<div class="form-underline"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-main">Reset Password</button>
            </div>
          </form>
        </div>
        <div class="col-lg-3"></div>
      </div>
    </div>
  </div>
<!-- /.Reset Password Content -->
{% endblock %}
